@{
    ViewBag.Title = "CustomerRegister";
}
<h2>New Customer Registration</h2>
<form action="/Customer/RegisterSuccess" method="get">
   
    <label for="firstName"></label>
    <input type="text" class="form-control" name="firstName" placeholder="First Name">


    <label for="lastName"></label>
    <input type="text" class="form-control" name="lastName" placeholder="Last Name">
    

    <label for="email"></label>
    <input type="email" class="form-control" name="email" placeholder="Email">
   
    
    <label for="number"></label>
    <input type="tel" class="form-control" name="number" placeholder="+(123) 456-7890">


    <label for="password"></label>
    <input type="password" class="form-control" name="password" placeholder="Please enter a password">
    
    <div class="checkbox">
        <label><input type="checkbox"> Remember me on this computer</label>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>
